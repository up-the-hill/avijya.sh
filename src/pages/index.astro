---
import Layout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import PostCard from "../components/PostCard.astro";

const posts = (await getCollection("posts"))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3); // Get top 3 recent posts
---

<Layout>
  <section class="hero">
    <div class="intro">
      <h1 class="greeting">Hi, I'm Avi.</h1>
      <p class="bio">
        I'm a developer who's all about having fun. There is joy and art to be
        found in technology, and I enjoy making that apparent in my work.
      </p>
      <div class="actions">
        <a href="/about" class="btn primary">More about me</a>
        <a href="/projects" class="btn secondary">See my projects</a>
      </div>
    </div>
  </section>

  <!-- <section class="recent-posts"> -->
  <!--   <div class="section-header"> -->
  <!--     <h2>Recent Posts</h2> -->
  <!--     <a href="/posts" class="view-all">View all &rarr;</a> -->
  <!--   </div> -->
  <!--   <ul class="posts-grid"> -->
  <!--     {posts.map((post) => <PostCard postData={post} />)} -->
  <!--   </ul> -->
  <!-- </section> -->
</Layout>

<style>
  /* Hero Section */
  .hero {
    padding: 4rem 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 40vh;
  }

  .greeting {
    line-height: 1.2;
    font-size: 12rem;
    font-weight: 800;
    letter-spacing: -0.08em;
  }

  .bio {
    font-family: serif;
    font-size: 1.25rem;
    color: var(--gray-dark);
    max-width: 65ch;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .actions {
    display: flex;
    gap: 1rem;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    border: 2px solid var(--black);
    text-decoration: none;
    font-weight: 600;
    transition:
      transform 0.5s,
      box-shadow 0.5s;
    box-shadow: 6px 6px var(--black);
    will-change: transform;

    &:hover {
      transform: translate3d(-2px, -2px, 0);
      box-shadow: 8px 8px var(--black);
      transition:
        transform 0.15s,
        box-shadow 0.15s;
    }

    &:active {
      transform: translate3d(6px, 6px, 0);
      box-shadow: none;
      transition:
        transform 0.1s,
        box-shadow 0.1s;
    }
  }

  .btn.primary {
    background-color: var(--accent);
    color: var(--black);
  }

  .btn.primary:hover {
    background-color: var(--black);
    color: var(--white);
  }

  .btn.secondary {
    background-color: transparent;
    color: var(--black);
    border: 2px solid var(--gray-light);
  }

  .btn.secondary:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  /* Recent Posts Section */
  /* .recent-posts { */
