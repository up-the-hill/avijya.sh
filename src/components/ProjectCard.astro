---
interface Props {
  title: string;
  description: string;
  image?: string;
  github?: string;
  demo?: Record<string, string>;
  tags?: string[];
}

const { title, description, image, github, demo, tags = [] } = Astro.props;
---

<li class="card">
  {
    image && (
      <div class="card-image">
        <img src={image} alt={title} />
      </div>
    )
  }
  <div class="card-main">
    <h2 class="title">{title}</h2>
    <div class="links">
      {
        github && (
          <a
            href={github}
            target="_blank"
            rel="noopener noreferrer"
            class="link"
          >
            GitHub
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                <path d="M9 18c-4.51 2-5-2-7-2" />
              </>
            </svg>
          </a>
        )
      }
      {
        demo &&
          Object.entries(demo).map(([name, link]) => (
            <a
              href={link}
              target="_blank"
              rel="noopener noreferrer"
              class="link"
            >
              {name}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <>
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                  <polyline points="15 3 21 3 21 9" />
                  <line x1="10" y1="14" x2="21" y2="3" />
                </>
              </svg>
            </a>
          ))
      }
    </div>
    <ul class="tags">
      {tags.map((tag) => <li>{tag}</li>)}
    </ul>
    <p class="description">{description}</p>
  </div>
</li>

<style>
  /* remove default styling */
  ul {
    padding: 0;
    margin: 0.5rem 0;
  }

  h2 {
    margin: 0;
    line-height: 1.2;
    font-weight: 900;
  }

  li {
    list-style: none;
  }

  .card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem 2rem;
    border-width: 2px;
    border-color: var(--black);
    border-radius: 1em;
    border-style: solid;
    transition:
      transform 0.5s,
      box-shadow 0.5s;
    box-shadow: 6px 6px;
    will-change: transform;
    background: var(--white);

    &:hover {
      box-shadow: 8px 8px;
      transform: translate3d(-2px, -2px, 0);
      transition:
        transform 0.1s ease-out,
        box-shadow 0.1s ease-out;
    }
    /* &:active { */
    /*   box-shadow: 0px 0px; */
    /*   transform: translate3d(6px, 6px, 0); */
    /*   transition: */
    /*     transform 0.1s ease-out, */
    /*     box-shadow 0.1s ease-out; */
    /* } */
  }

  .card-image {
    margin-bottom: 1rem;
    border-radius: 0.5rem;
    overflow: hidden;
    border: 1px solid var(--gray-light);
  }

  .card-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .card-main {
    display: flex;
    flex-direction: column;
    align-items: start;
  }

  .links {
    display: flex;
    gap: 1rem;
    margin: 0.5rem 0;
    flex-wrap: wrap;
  }

  .link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    text-decoration: none;
    color: var(--black);
    font-weight: bold;
    font-size: 0.9rem;
  }

  .link:hover {
    color: var(--accent);
  }

  /* tags */
  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tags > li {
    background-color: var(--gray-light);
    color: var(--gray-dark);
    font-size: 0.8rem;
    padding: 0.1rem 0.5rem;
    margin: 0.1rem;
    border-radius: 999px;
  }

  .description {
    font-family: serif;
    color: var(--gray-dark);
    margin: 0.5rem 0 0 0;
  }

  @media (prefers-reduced-motion: reduce) {
    .card {
      transition: none;
    }
  }
</style>

