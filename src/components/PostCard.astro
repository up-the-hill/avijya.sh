---
import FormattedDate from "./FormattedDate.astro";
const { postData } = Astro.props;
---

<li class="card">
  <a href={`/posts/${postData.id}/`}>
    <h2 class="title">{postData.data.title}</h2>
  </a>
  <ul class="tags">
    {postData.data.tags.map((tag) => <li>{tag}</li>)}
  </ul>
  <FormattedDate date={postData.data.date} />
  <p>{postData.data.description}</p>
  <a href={`/posts/${postData.id}/`}>
    <span>
      <b class="read-more-link"
        >Read more

        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M5 12h.5m3 0h1.5m3 0h6"></path>
          <path d="M15 16l4 -4"></path>
          <path d="M15 8l4 4"></path>
        </svg>
      </b>
    </span>
  </a>
</li>

<style>
  .read-more-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem; /* Adjust as needed */
  }

  /* remove default styling */
  ul {
    padding: 0;
  }

  h2 {
    margin: 0;
    font-weight: 900;
    display: inline;
  }

  li {
    list-style: none;
  }

  .card {
    padding: 1.5rem 2rem;
    border-width: 2px;
    border-color: var(--gray-light);
    border-radius: 1em;
    border-style: solid;
    font-size: 1rem;
    transition: all 0.5s;
  }

  .card:hover {
    svg {
      transition: all 0.2s;
      transform: translateX(0);
      opacity: 1;
    }
    box-shadow: 10px 10px;
    transition: all 0.2s;
  }

  a {
    text-decoration: none;
  }

  svg {
    opacity: 0;
    transform: translateX(-24px);
    transition:
      transform 0.5s,
      opacity 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* tags */
  .tags {
    display: flex;
  }

  .tags > li {
    background-color: var(--gray-light);
    color: var(--gray-dark);
    font-size: 1rem;
    padding: 0 0.1rem;
    margin: 0.1rem;
  }

  @media (prefers-reduced-motion: reduce) {
    svg {
      transition: none;
    }
    .card {
      transition: none;
    }
  }
</style>
